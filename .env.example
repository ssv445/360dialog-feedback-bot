# 360dialog API Key (get from sandbox: https://www.360dialog.com/whatsapp-sandbox)
DIALOG_API_KEY=your_360dialog_api_key_here

# 360dialog API URL (optional, defaults to sandbox)
DIALOG_API_URL=https://waba-sandbox.360dialog.io/v1/messages

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (optional, defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# OpenAI Max Tokens (optional, defaults to 500)
OPENAI_MAX_TOKENS=500

# OpenAI Temperature (optional, defaults to 0.3)
OPENAI_TEMPERATURE=0.3

# Server port
PORT=3000

# Webhook verification token (you choose this, use same in 360dialog console)
WEBHOOK_VERIFY_TOKEN=your_verification_token_here
