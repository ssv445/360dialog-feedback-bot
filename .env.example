# 360dialog API Key (get from sandbox: https://www.360dialog.com/whatsapp-sandbox)
DIALOG_API_KEY=your_360dialog_api_key_here

# 360dialog API URL (optional, defaults to sandbox)
DIALOG_API_URL=https://waba-sandbox.360dialog.io/v1/messages

# OpenRouter API Key (https://openrouter.ai/keys)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Base URL (optional)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Model - can use any OpenRouter model (openai/gpt-5-mini, anthropic/claude-3-haiku, etc.)
LLM_MODEL=openai/gpt-5-mini

# LLM Max Tokens (optional)
LLM_MAX_TOKENS=500

# LLM Temperature (optional)
LLM_TEMPERATURE=0.3

# Server port
PORT=3000

# Webhook verification token (you choose this, use same in 360dialog console)
WEBHOOK_VERIFY_TOKEN=your_verification_token_here

# Webhook URL for 360dialog sandbox (your ngrok URL + /webhook)
# Run: npm run setup:webhook to configure this in 360dialog
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhook

# Redis URL (optional, defaults to localhost)
REDIS_URL=redis://localhost:6379
